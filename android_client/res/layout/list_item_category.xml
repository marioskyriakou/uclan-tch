<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingTop="12dp"
              android:paddingBottom="12dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/list_item_category_active"
                android:text="@string/ACTIVE"
                android:textSize="@dimen/text_small_size"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/list_item_category_name"
                android:textSize="@dimen/text_size"
                android:textColor="@color/pirate_red"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/list_item_category_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/list_item_category_valid_until"
            android:textSize="@dimen/text_small_size"
            android:textColor="@color/dark_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>